<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SellMapper">
	<insert id="write" parameterType="SellerDTO"  >
		insert into seller values(#{id},#{title},#{category},#{add_option},#{price},#{work_date},#{contents},#{fname},#{oname},#{refund})
	</insert>
	
	<update id="update" parameterType="SellerDTO">
		update seller set id=#{id},title=#{title},category=#{category},add_option=#{add_option},price=#{price},work_date=#{work_date},contents=#{contents},fname=#{fname},oname=#{oname},refund=#{refund})
	</update>
	
	<delete id="delete" parameterType="String">
		delete seller where id=#{id}
	</delete>
	
	<select id="selectList" parameterType="ListData" resultType="ListData">
		select * from seller where category=#{category};	
	</select>
	
	<select id="selectOne" parameterType="String" resultType="SellerDTO">
		select * from seller where id=#{id}
	</select>
	
</mapper>