<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TalkMapper">
	<insert id="insert" parameterType="TalkDTO">
		insert into talk values(#{id}, #{type}, #{contents}, #{email}, #{fname}, #{oname})
	</insert>

	<select id="selectList" parameterType="ListData" resultType="TalkDTO">
			select * from
  			(select rownum R, F.* from
  			(select * from talk
  			<if test="kind == 'title'">
				where title LIKE '%'|| #{search}||'%'
			</if>
			<if test="kind == 'contents'">
				where contents LIKE '%'|| #{search}||'%'
			</if>			
  			order by num desc) F)
  			where R between #{startRow} and #{lastRow}
	</select>

	<select id="selectOne" parameterType="int" resultType="TalkDTO">
		select * from talk where num=#{num}
	</select>

</mapper>






